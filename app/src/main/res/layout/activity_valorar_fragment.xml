<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC4F29"
    tools:context=".fragment.ValorarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_mejor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1B06C"
            android:gravity="center"
            android:padding="10dp"
            android:text="Mejor valorados"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_valorar"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="10dp" >

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/textView_mapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F1B06C"
            android:gravity="center"
            android:padding="7dp"
            android:text="UbicaciÃ³n"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapa"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            android:layout_gravity="bottom" />
    </LinearLayout>

</FrameLayout>
